<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMargin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        style="@android:style/Widget.TextView"
        android:height="36dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageMemSymbol"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/textMemName"
        android:layout_alignBottom="@+id/textMemName"
        android:src="@drawable/ic_chevron_right_24dp"
        style="@android:style/Widget.Material.Light.Button.Borderless.Small"
        android:layout_toRightOf="@+id/textMemColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMemColor"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/textMargin"
        android:singleLine="true"
        android:width="8dp"
        android:background="#000000"
        android:layout_alignTop="@+id/textMemName"
        android:layout_alignBottom="@+id/textMemName" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textMemName"
        android:layout_alignParentTop="true"
        android:height="36dp"
        android:layout_alignTop="@+id/textMargin"
        android:textAlignment="gravity"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/imageMemSymbol"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:ellipsize="end"
        android:paddingLeft="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMemTasks"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/textMargin"
        android:layout_alignParentEnd="true"
        android:background="#e8e8e8"
        android:layout_marginRight="12dp"
        android:layout_marginTop="3dp"
        android:textSize="12dp"
        android:textAlignment="viewEnd"
        android:width="18dp"
        android:textStyle="italic" />

</RelativeLayout>