<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tsElemCard"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_centerHorizontal="true"
        android:background="@color/cardview_light_background">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tsAuthor"
                android:layout_alignParentStart="true"
                android:textStyle="italic"
                style="@android:style/Widget.Material.Light.TextView"
                android:textSize="@dimen/abc_text_size_caption_material"
                android:layout_marginLeft="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tsStart"
                android:layout_alignParentEnd="false"
                android:layout_toLeftOf="@+id/tsDuration"
                android:textStyle="italic"
                style="@android:style/Widget.Material.TextView"
                android:textSize="@dimen/abc_text_size_caption_material" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tsDuration"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="16dp"
                android:textStyle="italic"
                style="@android:style/Widget.TextView"
                android:textSize="@dimen/abc_text_size_caption_material"
                android:layout_marginRight="4dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tsText"
                android:layout_below="@+id/tsAuthor"
                android:ellipsize="end"
                android:lines="4"
                style="@android:style/Widget.Material.TextView"
                android:textSize="@dimen/abc_text_size_small_material"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>